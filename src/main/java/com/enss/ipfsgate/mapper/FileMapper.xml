<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enss.ipfsgate.mapper.FileMapper">
    <resultMap id="fileResultMap" type="java.util.Map">
        <result column="u_id" property="uId" javaType="java.lang.Integer" jdbcType="INTEGER" />
        <result column="u_name" property="uName" javaType="java.lang.String" jdbcType="VARCHAR" />
    </resultMap>
    <insert id="insert" useGeneratedKeys="true" keyProperty="fileId" parameterType="com.enss.ipfsgate.model.FileInfo">
        insert into repo_file (repo_name,file_name,file_path)
        values (#{repo_name,jdbcType=VARCHAR}, #{file_name,jdbcType=VARCHAR}, #{file_path,jdbcType=VARCHAR})
    </insert>
    <select id="search" parameterType="String" resultMap="fileResultMap">
        SELECT *
        FROM repo_file
        WHERE file_name = #{file_name,jdbcType=VARCHAR}
          AND repo_name = #{repo_name,jdbcType=VARCHAR}
          AND file_path = #{file_path,jdbcType=VARCHAR}
        ORDER BY id DESC LIMIT 1
    </select>
    <select id="selectAll" resultMap="fileResultMap">
        SELECT *
        FROM repo_file
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enss.ipfsgate.mapper.UserMapper">


    <resultMap id="SearchResultMap" type="com.enss.ipfsgate.model.UserInfo">
        <result property="id" column="id" />
        <result property="userName" column="user_name" />
        <result property="userPhone" column="user_phone" />
        <result property="userEmail" column="user_email" />
        <result property="chainAddress" column="chain_address" />
        <result property="userType" column="user_type" />
    </resultMap>

    <!-- 查询所有用户 -->
    <select id="selectAllUsers" resultMap="SearchResultMap">
        select * from user
    </select>
    <!-- 登陆 -->
    <select id="Login" parameterType="com.enss.ipfsgate.model.UserInfo" resultMap="SearchResultMap">
        SELECT * FROM user
        WHERE user_name = #{userName} AND user_password = #{userPassword}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.enss.ipfsgate.model.UserInfo">
        insert into user
            (user_name, user_phone, user_password, user_email,pri_key,pub_key,chain_address)
        values
            (#{userName}, #{userPhone}, #{userPassword}, #{userEmail}, #{priKey}, #{pubKey}, #{chainAddress})
    </insert>

    <update id="updateChainInfo" parameterType="com.enss.ipfsgate.model.UserInfo">
        UPDATE user SET pri_key = #{priKey},pub_key = #{pubKey},chain_address = #{chainAddress}
        WHERE id = #{id}
    </update>

</mapper>